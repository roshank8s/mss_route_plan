<odoo>
  <data noupdate="1">
    <!-- Scheduled Action to action_fetch_delivery_orders -->
    <record id="ir_cron_action_fetch_delivery_orders" model="ir.cron">
      <field name="name">Fetch Delivery Orders</field>
      <field name="model_id" ref="model_traktop"/>
      <field name="state">code</field>
      <field name="code">model.action_fetch_delivery_orders()</field>
      <field name="interval_number">2</field>
      <field name="interval_type">minutes</field>
      <field name="active">True</field>
    </record>
  </data>
  <data noupdate="1">
    <record id="ir_cron_generate_route_plan" model="ir.cron">
      <field name="name">Generate Daily Route Plan</field>
      <field name="model_id" ref="model_route_plan"/>
      <field name="state">code</field>
      <field name="code">model.create_daily_plan()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">True</field>
    </record>
  </data>
</odoo>
